<h1>Perfil de <%= @user.email %></h1>
<%= form_for(current_user.active_relationships.build, remote: true) do |f| %>
  <%= f.submit "Seguir" %>
<% end %>

<h2>Tweets (<%= @user.tweets.count %>)</h2>
<% if @user.tweets.empty? %>
  <p>Usuário ainda não tem tweets</p>

<% else %>
  <ul>
    <% @user.tweets.each do |tweet| %>
      <li><%= tweet.content %></li>
    <% end %>
  </ul>
<% end %>
